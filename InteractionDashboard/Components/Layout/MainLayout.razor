@inherits LayoutComponentBase

<TelerikRootComponent>
    <HeadContent>
        <title>TV Interaction Dashboard</title>
    </HeadContent>

    <style>
        .page {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 200px;
            background: linear-gradient(to bottom, #43B0C9, #16849D, #13687B, #1A5B89, #0E3663) !important;
            color: white;
        }

        .nav-link {
            color: white;
            font-weight: 500;
            padding: 0.75rem 1rem;
        }

            .nav-link.active {
                background-color: rgba(255, 255, 255, 0.2);
                color: #fff;
            }

        main {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .top-row {
            position: sticky;
            top: 0;
            background-color: #ffffff;
            padding: 1rem 2rem;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }


        .content {
            flex: 1;
            padding: 2rem;
            background-color: #FDF7F7;
        }

        .kpi-card-grid {
            display: flex;
            gap: 2.0rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 1rem;
        }

        .kpi-card {
            flex: 0 1 210px; /* smaller base width */
            padding: 1rem 1.25rem;
            background: white;
            border-radius: 0.75rem;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
            text-align: center;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .kpi-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(0,0,0,0.12);
            }

        .kpi-value {
            font-size: 1.8rem;
            font-weight: bold;
            margin: 0;
        }

        .value-low {
            color: #e74c3c;
        }

        .value-medium {
            color: #f1c40f;
        }

        .value-high {
            color: #2ecc71;
        }

        .chart-container {
            background: white;
            border-radius: 0.75rem;
            padding: 1.5rem;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
            margin-bottom: 2rem;
        }

        .export-wrapper {
            position: relative;
            display: inline-block;
        }

        .menu-icon {
            background: transparent;
            border: none;
            font-size: 20px;
            cursor: pointer;
            padding: 4px 8px;
            position: absolute;
            right: 0;
            top: 0;
            z-index: 5;
        }

        .export-dropdown {
            position: absolute;
            top: 30px;
            right: 0;
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
            z-index: 10;
            width: 160px;
            padding: 4px 0;
        }

        .dropdown-item {
            display: block;
            width: 100%;
            padding: 8px 12px;
            background: none;
            border: none;
            text-align: left;
            font-size: 14px;
            cursor: pointer;
            transition: background 0.2s;
        }

            .dropdown-item:hover {
                background-color: #f0f0f0;
            }



    </style>

    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row d-flex align-items-center justify-content-center">
                <h3 class="mb-0"><strong>📊 Manufacturing Insights Interaction Dashboard</strong></h3>
            </div>

            <article class="content">
                @Body
            </article>
        </main>
    </div>

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
</TelerikRootComponent>
